<% layout("/layouts/boilerplate") %>


<style>

    body{
        width : 100vw;
        display: flex;
        align-items: center;
        flex-direction: column;
    }
    
    h1{
        text-align: center;
        margin-left: -14rem;
        margin-bottom: 0;
    }

form{
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
    flex-direction: column;
    
}

form input{
    width : 500px;
    height : 30px;
    padding-left: 5px;
    border: #333;
    border-radius: 5px;
    font-size: 16px;
    margin-bottom: 2rem;
}
form textarea{
    padding-left: 7px;
    padding-top: 4px;
    font-size: 16px;
    margin-bottom: 2rem;
}

form button{

    font-size: 16px;
    border-radius: 5px;
    /* border: 1px solid black; */
    border: navajowhite;
    padding: 5px;
    color: white;
    margin-bottom: 2rem;
    cursor: pointer;
    background-color: rgb(255, 0, 0);
}

.row{
    display:flex;
    gap: 2rem;
}

.field{
    display: flex;
    flex-direction: column;
    flex: 1;
}

.field input{
    max-width: 100%;
}

</style>

<h1> Create New Listing</h1>

<form method="post" action="/listings/new">

    <label for="title">Title</label>
    <input type="text" id="title" name="title" placeholder="Enter the vila name" required>

    <label for="description">Description</label>
    <textarea style="min-height: 150px; min-width: 500px;" id="description" name="description" placeholder="Description" required></textarea>

    <label for="image">Image</label>
    <input type="text" placeholder="Enter the image url" id="image" name="image" >

     <div class="row">
        <div class="field">
            <label for="price">Price</label>
            <input type="number" style="width: 200px;" id="price" placeholder="Enter the price" name="price" required>
        </div>

        <div class="field">
            <label for="location">Location</label>
            <input type="text" id="location" style="width: 270px;" placeholder="Enter the location" name="location" required>
        </div>
    </div>
    <label for="country">Title</label>
    <input type="text" placeholder="Enter the country" id="country" name="country" required>

    <button>Add Listing</button>

</form>