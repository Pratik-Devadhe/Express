<% layout("/layouts/boilerplate.ejs") %>

<style>

    body{
        width : 100vw;
        display: flex;
        align-items: center;
        flex-direction: column;
    }
    
    h1{
        text-align: center;
        margin-left: -14rem;
        margin-bottom: 0;
    }

form{
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
    flex-direction: column;
    
}

form input{
    width : 500px;
    height : 30px;
    padding-left: 5px;
    border: #333;
    border-radius: 5px;
    font-size: 16px;
    margin-bottom: 2rem;
    border : 1px solid black;
}
form textarea{
    padding-left: 7px;
    padding-top: 4px;
    font-size: 16px;
    margin-bottom: 2rem;
}

form button{

    font-size: 16px;
    border-radius: 5px;
    /* border: 1px solid black; */
    border: navajowhite;
    padding: 5px;
    color: black;
    font-weight: 600;
    margin-bottom: 2rem;
    cursor: pointer;
    background-color: rgb(19, 220, 72);
}

.row{
    display:flex;
    gap: 2rem;
}

.field{
    display: flex;
    flex-direction: column;
    flex: 1;
}

.field input{
    max-width: 100%;
    border : 1px solid black;
}

</style>

<body>
    
    <form  method="post" action="/listings/<%=list.id%>?_method=PUT">

    <label for="title">Title</label>
    <input type="text" id="title" name="title"  value="<%=list.title%>">

    <label for="description">Description</label>
    <textarea style="min-height: 150px; min-width: 500px;" id="description" name="description" ><%=list.description%></textarea>

    <label for="image">Image</label>
    <input type="text" id="image" name="image" <%=list.image%> >

     <div class="row">
        <div class="field">
            <label for="price">Price</label>
            <input type="number" style="width: 200px;" id="price"  name="price" value="<%=list.price%>>
        </div>

        <div class="field">
            <label for="location">Location</label>
            <input type="text" id="location" style="width: 270px;"  name="location" value="<%=list.location%>>
        </div>
    </div>
    <label for="country">Title</label>
    <input type="text"  id="country" name="country" value="<%=list.country%>">

        <button>Submit</button>
    </form>
    
</body>
