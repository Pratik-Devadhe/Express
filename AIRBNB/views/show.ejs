
<% layout("/layouts/boilerplate.ejs") %>

<style>

    body{
        display: flex;
        align-items: center;
        flex-direction: column;
        /* flex: 1; */
    }

    button{
         color: black; border: 1px solid black; padding: 5px; border-radius: 5px;
         margin: 2rem 0 0 1rem;
    }

    

    .image{
        display: flex;
        flex-direction: column;
    }

    .image img{
        border-radius: 20px;
        padding : 3px;
        width : 400px; 
        height : 300px;
        
    }

    .info{
        display : grid;
        text-align: center;
        align-items: center;
        grid-template-columns: repeat(11 , 1fr);
        margin : 0 2rem;
        min-height : 100px;
        border : 1px solid black; 
        border-radius: 12px;  
    }

    .des{
        grid-column: span 9;
        padding-left: 2px;
        font-weight: 600;
    }

    .price{
        grid-column: span 1;
         font-weight: 600;
        margin-right: 10px;
    }

    button:hover{
        cursor: pointer;
    }
</style>

    <h1>Here's the full information</h1>

    
    <div class="image">
        
     <img src="<%= list.image %>" >  

     <h3 style="margin-bottom: 0;">   <%=list.title%>    </h3>

     <div style="margin: 0 0 12px 12px; ">
        <%=list.location%>,  
        <%=list.country%>
    </div>
    </div>  


    <div class="info">

        <div class="des">
            <%=list.description%>  
        </div>
        <hr style="height: 62px;">
        <div class="price">
            &#8377; &nbsp;<%=list.price%>  /Day
        </div>

    </div>
<!--      
       -->

    

    <form method="get" action="/listings/<%=list.id%>/edit">
       
        <button style="background-color: rgb(197, 193, 193); font-size: 15px; font-weight: 600; border: none; padding : 7px;""> Edit the info </button>        
    </form>

   
    <form method="post" action="/listings/delete/<%=list.id%>?_method=DELETE">
       
    <button style="background-color: red; font-size: 15px; font-weight: 600; border: none; padding : 7px; margin-bottom: 20px;;">Delete listings</button>

    </form>

    
